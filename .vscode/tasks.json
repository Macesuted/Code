{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C++ Compile",
            "type": "shell",
            "group": {
                "kind": "test"
            },
            "command": "g++",
            "args": [
                "\"${file}\"",
                "-o",
                "\"${fileBasenameNoExtension}\"",
                "-lm",
                "-Wall",
                "-Wextra",
                "-O2",
                "-std=c++20",
                "'-Wl,--stack=512000000'",
                "-I",
                "/Code/libs/ac-library",
                "-I",
                "/Code/libs/testlib",
                "-DLOCAL"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "panel": "dedicated"
            }
        },
        {
            "label": "C++ Run",
            "type": "shell",
            "group": {
                "kind": "test"
            },
            "command": "./\"${fileBasenameNoExtension}\"; if ($?) { rm \"${fileBasenameNoExtension}.exe\" };",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "panel": "dedicated",
                "focus": true,
                "showReuseMessage": false
            }
        },
        {
            "label": "Kill Process",
            "type": "shell",
            "command": "taskkill",
            "args": [
                "/IM",
                "${fileBasenameNoExtension}",
                "/F",
            ]
        },
        {
            "label": "C++ Compile & Run",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "C++ Compile",
                "C++ Run"
            ],
            "dependsOrder": "sequence",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "panel": "dedicated",
                "focus": true,
                "showReuseMessage": false
            }
        },
        {
            "label": "C++ Compile (Debug)",
            "type": "shell",
            "group": {
                "kind": "build"
            },
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}",
                "-lm",
                "-Wall",
                "-Wextra",
                "-std=c++20",
                "'-Wl,--stack=512000000'",
                "-I",
                "/Code/libs/ac-library",
                "-I",
                "/Code/libs/testlib",
                "-DLOCAL"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "reveal": "silent"
            }
        }
    ]
}