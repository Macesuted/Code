{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "compile-debug",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lm",
                "-Wall",
                "-Wextra",
                "-O2",
                "-std=c++20",
                "'-Wl,--stack=512000000'",
                "-I E:\\Code\\tools\\libs\\atcoder",
                "-I E:\\Code\\tools\\libs\\testlib",
                "-DMACESUTED"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}