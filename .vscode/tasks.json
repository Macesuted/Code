{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C++ Compile",
            "type": "shell",
            "group": {
                "kind": "test"
            },
            "command": "g++",
            "args": [
                "'${fileBasename}'",
                "-o",
                "'${fileBasenameNoExtension}.exe'",
                "-std=c++20",
                "-Wall",
                "-Wextra",
                "-O2",
                "'-Wl,--stack=512000000'",
                "-IE:/Code/libs/testlib/",
                "-DLOCAL",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "panel": "dedicated"
            }
        },
        {
            "label": "C++ Run",
            "type": "shell",
            "group": {
                "kind": "test"
            },
            "command": "./\"${fileBasenameNoExtension}\"; if ($?) { rm \"${fileBasenameNoExtension}.exe\" };",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "panel": "dedicated",
                "focus": true,
                "showReuseMessage": false
            }
        },
        {
            "label": "C++ Compile & Run",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "C++ Compile",
                "C++ Run"
            ],
            "dependsOrder": "sequence",
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "panel": "dedicated",
                "focus": true,
                "showReuseMessage": false
            }
        },
        {
            "label": "LLDB Build",
            "type": "shell",
            "command": "clang++",
            "args": [
                "'${fileBasename}'",
                "-o",
                "'${fileBasenameNoExtension}.exe'",
                "-std=c++20",
                "-glldb",
                "-Wall",
                "-Wextra",
                "-O2",
                "'-Wl,--stack=512000000'",
                "-D LOCAL"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": {
                "owner": "lldb",
                "pattern": {
                    "regexp": "^(.*\\.cpp):(\\d+):(\\d+): (.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                },
            }
        }
    ],
}